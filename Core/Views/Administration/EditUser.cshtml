@model EditUserViewModel
@{ViewBag.Title="Edit User";
#pragma warning disable CS8604 // Possible null reference return.
}


<h4 class="alert alert-success mt-1 radiusMode borderH4">Edit User</h4>

<form method="post" class="mt-3 aTransp bTransp">
    <div asp-validation-summary="All" class="text-danger"></div>

  
        <div class="form-group row radiusMode">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Id" disabled="true" class="form-control" />
            </div>
        </div>

        <div class=" form-group row">
            <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>

        <div class=" form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control alert" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
   



    <div class="alert alert-danger radiusMode divContainer">
        <div class=" form-group row mb-2">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="ListUsers" asp-controller="Administration" class="btn btn-danger ml-1">Cancel</a>
            </div>
        </div>
    </div>


    <div class="card myCard aTransp">
        <div class="card-header divContainer">
            <h3>User Roles</h3>
        </div>

        <div class="card-body">
            @if (Model.Roles.Any())
            {
                foreach(var role in Model.Roles)
                {
                    <ul class="list-group myCard">
                        <li class="list-group-item divContainer">
                            <h6 class="card-title m-0">@role</h6>
                        </li>
                    </ul>
                    
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>

        <div class="card-footer divContainer">
            <a asp-action="ManageUserRoles" asp-controller="Administration" asp-route-userId="@Model.Id" class="btn btn-primary" style="width:auto">Manage Roles</a>
        </div>
    </div>


    <div class="card mt-2 myCard">
        <div class="card-header divContainer">

            <h3>User Claims</h3>
        </div>

        <div class="card-body">
            @if (Model.Claims.Any())
            {
                foreach (var claim in Model.Claims)
                {
                    <ul class="list-group myCard">
                        <li class="list-group-item divContainer">
                            <h6 class="card-title m-0">@claim</h6>
                        </li>
                    </ul>
                    
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>

        <div class="card-footer divContainer aTransp">
            <a asp-action="ManageUserClaims" asp-controller="Administration" asp-route-userId="@Model.Id" class="btn btn-primary" style="width:auto">Manage Claims</a>
        </div>
    </div>


</form>