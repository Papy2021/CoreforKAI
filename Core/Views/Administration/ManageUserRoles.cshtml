@model List<UserRolesViewModel>
@{
    var userId = ViewBag.userId;
    ViewBag.Title = "Manage User Roles";
}

<form method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="card myCard">
        <div class="card-header divContainer">
            <h2>Manage User Roles</h2>
        </div>

        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                    <div class="form-check m-1">
                        <input hidden asp-for="@Model[i].RoleId">
                        <input hidden asp-for="@Model[i].RoleName">
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].RoleName
                        </label>
                   </div>
            }
        </div>
       
        <div class="card-footer divContainer aTransp bTransp">
            <button type="submit" class="btn btn-primary" style="width:auto">Update</button>
            <a asp-action="EditUser" asp-route-Id="@userId" asp-controller="Administration" class="btn btn-danger" style="width:auto">Cancel</a>
        </div>
    </div>

</form>
