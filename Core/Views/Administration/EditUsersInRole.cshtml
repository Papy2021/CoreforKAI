@model List<EditUsersInRoleViewModel>
@{
    var roleId = ViewBag.roleId;
    var roleName = ViewBag.RoleName;
    ViewBag.Title = "Edit Users in role";
}

<form method="post" asp-action="EditUsersInRole"asp-controller="Administration" asp-route-roleId="@roleId" class="mt-3">
    <div class="card myCard aTransp bTransp radiusMode">
        <div class="card-header">
            <h2 class="text-center">Manage Users In <b>@roleName</b> Role</h2>
        </div>

        <div class="card-body divContainer">

            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input hidden asp-for="@Model[i].UserId">
                    <input hidden asp-for="@Model[i].UserName">
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].UserName
                    </label>
                </div>
            }

        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary" style="width:auto">Update</button>
            <a asp-action="EditRole" asp-route-Id="@roleId" asp-controller="Administration" class="btn btn-danger" style="width:auto">Cancel</a>
        </div>
    </div>

</form>
