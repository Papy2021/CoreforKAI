@model UserClaimsViewModel
@{

    ViewBag.Title = "Manage User Claims";
#pragma warning disable CS8602 // Possible null reference return.
}

<form method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="card myCard">
        <div class="card-header divContainer">
            <h2>Manage User Claims</h2>
        </div>

        <div class="card-body">
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <div class="form-check m-1">
                    <input hidden asp-for="@Model.Claims[i].ClaimType">
                    <input hidden asp-for="@Model.Claims[i].ClaimType">
                    <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">
                        @Model.Claims[i].ClaimType
                    </label>
                </div>
            }
        </div>
        
        <div class="card-footer divContainer aTransp bTransp">
            <button type="submit" class="btn btn-primary" style="width:auto">Update</button>
            <a asp-action="EditUser" asp-route-Id="@Model.UserId" asp-controller="Administration" class="btn btn-danger" style="width:auto">Cancel</a>
        </div>
    </div>

</form>
