@model AddPasswordViewModel
@{
    ViewBag.Title = "Add Password";
}


<h4 class="alert alert-success mt-1 radiusMode borderH4">Add Password</h4>
<hr />
<p class="text-info text-center">
    you have used an external account to login and do not have a local username/password.
    Simply set a new password if you want to login using a local account.
    use your email as the username.
</p>

<div class="row divContainer radiusMode mt-1 bTransp">

    <div class="col-md-10 m-auto">
        <form method="post">
            <br />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" placeholder="New Password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
        </form>
        <br />
    </div>
</div>