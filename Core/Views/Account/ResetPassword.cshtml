@model ResetPasswordViewModel
@{
    ViewBag.Title = "Reset Password";
}


<h4 class="alert alert-success mt-1 radiusMode borderH4">Reset Password</h4>
<div class="row divContainer radiusMode m-0 bTransp">

    <div class="col-md-10 m-auto">
        <form method="post">
            <br />
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="Email" hidden />
            <input asp-for="Token" hidden />
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Reset</button>

        </form>
        <br />
    </div>
</div>